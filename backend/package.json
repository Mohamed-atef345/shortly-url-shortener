{
  "name": "shortly-api",
  "version": "1.0.0",
  "description": "URL Shortener API with Bun and Elysia",
  "author": "Shortly Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target=bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx @biomejs/biome check src/",
    "lint:fix": "bunx @biomejs/biome check --apply src/",
    "format": "bunx @biomejs/biome format --write src/",
    "typecheck": "bunx tsc --noEmit",
    "docker:build": "docker build -t shortly-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env shortly-api"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.3",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "bcryptjs": "^3.0.3",
    "elysia": "^1.4.22",
    "elysia-rate-limit": "^4.5.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "mongoose": "^9.1.5",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "^1.3.8"
  }
}
